<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                        http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="RPS\CommentBundle\Document\Comment" table="rps_contacts">
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="setCreatedValue" />
            <lifecycle-callback type="preUpdate" method="setModifiedValue" />
        </lifecycle-callbacks>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="userId" column="userId" type="integer" nullable="false" />
        <field name="fname" column="fname" type="string" length="50" nullable="false" />
        <field name="lname" column="lname" type="string" length="50" nullable="true" />
        <field name="phone" column="phone" type="string" length="32" nullable="true" />
        <field name="email" column="email" type="string" length="100" nullable="true" />
        <field name="twitterUsername" column="twitterUsername" type="string" length="32" nullable="true" />
        <field name="facebookUsername" column="facebookUsername" type="string" length="64" nullable="true" />
        <field name="facebookUid" column="facebookUid" type="string" length="24" nullable="true" />
        <field name="gplusUsername" column="gplusUsername" type="string" length="64" nullable="true" />
        <field name="gplusUid" column="gplusUid" type="string" length="24" nullable="true" />
        <field name="imagePath" column="imagePath" type="string" length="32" nullable="true" />
    </document>

</doctrine-mongo-mapping>
