<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping"
                        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                        xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                        http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <document name="RPS\ContactBundle\Document\Contact" table="rps_contacts">
        <lifecycle-callbacks>
            <lifecycle-callback type="prePersist" method="preSave" />
            <lifecycle-callback type="preUpdate" method="preSave" />
            <lifecycle-callback type="postPersist" method="postSave" />
            <lifecycle-callback type="postUpdate" method="postSave" />
            <lifecycle-callback type="preRemove" method="preRemove" />
            <lifecycle-callback type="postRemove" method="postRemove" />
        </lifecycle-callbacks>

        <field fieldName="id" id="true" />
        <field name="userId" column="userId" type="integer" nullable="false" />
        <field name="firstName" column="firstName" type="string" nullable="false" />
        <field name="lastName" column="lastName" type="string" nullable="true" />
        <field name="phone" column="phone" type="string" nullable="true" />
        <field name="email" column="email" type="string" nullable="true" />
        <field name="twitterUsername" column="twitterUsername" type="string" nullable="true" />
        <field name="facebookUsername" column="facebookUsername" type="string" nullable="true" />
        <field name="facebookUid" column="facebookUid" type="string" nullable="true" />
        <field name="gplusUsername" column="gplusUsername" type="string" nullable="true" />
        <field name="gplusUid" column="gplusUid" type="string" nullable="true" />
        <field name="imagePath" column="imagePath" type="string" nullable="true" />
    </document>

</doctrine-mongo-mapping>
