{% extends 'RPSContactBundle:Default:layout.html.twig' %}

{% block title 'title.edit_contact'|trans({}, 'RPSContactBundle') %}

{% block content %}

    {{ form_start(form, {'action': path('rps_contact_edit', {'id': id}), 'method': 'POST', 'class': 'rps-contact-form', 'attr': {'class': 'form-horizontal rps-contact-form'} }) }}

        <div class="form-btns">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_widget(form.saveAndNew, {'attr': {'class': 'btn btn-info'}}) }}
            <a class="btn btn-danger" href="{{ path('rps_contact_cancel') }}">{{ 'link.cancel'|trans({}, 'RPSContactBundle') }}</a>
        </div>

        {{ form_widget(form) }}

        <input type="hidden" name="id" value="{{ id }}" />

    {{ form_end(form) }}
{% endblock %}
